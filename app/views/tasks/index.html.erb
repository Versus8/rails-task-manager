<div class="container border border-3 border-dark m-3 p-3">
  <h1 class="">Tasks</h1>

  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
    <li><input type="checkbox"><label><%= link_to task.title, task_path(task), :class => "text-decoration-none text-black" %></label></li>
    <%= link_to 'Delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <% end %>
  </ul>

  <%= link_to '+ New task', new_task_path, :class => "btn btn-primary" %>
</div>
